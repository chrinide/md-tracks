from tracks.core import load_track, dump_track
from tracks.parse import parse_slice, parse_x_step
from tracks.log import log
from molmod.units import parse_unit

import numpy, os
from optparse import OptionParser


usage = """%prog [options] input {x_axis|x_step} [input.error]

%prog computes the integral of the function in ${input}. If ${input.error}
is given or ${input}.error exists, %prog will also compute the error on the
integral. The second argument is a track with the x-axis, or the distance
between two subsequent data points. The output is written to ${input}.int and
${input}.int.error.

%prog -h prints out all available options."""

parser = OptionParser(usage)
(options, args) = parser.parse_args()


if len(args) == 2 or len(args) == 3:
    path_in = args[0]
    x_step = parse_x_step(args[1], "x")
    if len(args) == 3:
        path_error = args[2]
    else:
        path_error = "%s.error" % path_in
        if not os.path.isfile(path_error):
            path_error = None
else:
    parser.error("Expecting two or three arguments.")

f = load_track(path_in)
fint = f.cumsum()*x_step
name = "%s.int" % path_in
dump_track(name, fint)
log("WRITTEN %s" % name)

if path_error is not None:
    e = load_track(path_error)
    var = e**2
    varint = numpy.cumsum(var)*x_step
    eint = numpy.sqrt(varint)
    name = "%s.int.error" % path_in
    dump_track(name, eint)
    log("WRITTEN %s" % name)


