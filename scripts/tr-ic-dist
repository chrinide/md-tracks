from tracks import dist_track, dump_track, parse_slice
import numpy, os
from optparse import OptionParser

usage = """Usage: %prog [options] prefix index1 index2
%prog computes the distance between the atom with index1 and the atom with 
index2 for all time steps. Tracks with the given prefix must exist, and their 
filenames must look like:
${prefix}.${index1}.c and ${prefix}.${index2}.c
where c is x,y or z. The output is stored in 
${prefix}.dist.${index1}.${index2}

%prog -h prints out all available options."""

parser = OptionParser(usage)
parser.add_option(
    "-s", "--slice", 
    help="sample the input tracks with the given slice start:stop:step "
         "where start, stop and step must be integers or can be omitted. "
         "The slice interpretation is pythonic. [default=%default]",
    default="::"
)
(options, args) = parser.parse_args()

if len(args) == 3:
    prefix, index1, index2 = args
    index1 = int(index1)
    index2 = int(index2)
else:
    parser.error("Expecting three arguments.")

sub = parse_slice(options.slice)
dump_track(
    '%s.dist.%07i.%07i' % (prefix, index1, index2), 
    dist_track(index1, index2, prefix, sub)
)
    


